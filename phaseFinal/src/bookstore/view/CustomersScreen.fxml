<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookstore.controller.CustomersScreenController">
    <TableView fx:id="customersTable">
        <columns>
            <TableColumn text="Username" fx:id="usernameColumn"/>
            <TableColumn text="Password" fx:id="passwordColumn"/>
            <TableColumn text="Points" fx:id="pointsColumn"/>
        </columns>
    </TableView>
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="passwordField" promptText="Password"/>
    <Button text="Add" onAction="#handleAddCustomer"/>
    <Button text="Delete" onAction="#handleDeleteCustomer"/>
    <Button text="Back" onAction="#handleBack"/>
</VBox>